{{>layout/header}}
<style>
    th {
        text-align: center;
    }
    td {
        text-align: center;
    }
</style>
<main class="main-size">
    <div class="row justify-content-end mb-3">
        <div class="col-md-4">
            <form action="/" method="get" class="form-inline">
                <div class="input-group rounded">
                    <input class="search-box form-control me-2 rounded-end" type="text" placeholder="기업,채용정보를 입력하세요"
                           name="keyword" required/>
                    <a href="#" class="text-body"><i class="fa-solid fa-magnifying-glass icon-search"></i></a>
                </div>
            </form>
        </div>
    </div>
    <div>
        <!-- 바디 start -->
        <h2 style="text-align: center">이력서 구독 정보</h2>
        <hr>
        <table class="table">
            <tr>
                <th>이름</th>
                <th style="text-align: start">이력서 제목</th>
                <th></th>
            </tr>
            {{#subscribeList}}
                <tr>
                    <td>{{resumeUsername}}</td>
                    <td style="text-align: start">
                        <a href="/resume/{{resumeId}}">{{title}}</a>
                    </td>
                    <td>
                        <form action="/user/{{resumeId}}/unsubscribeResume" method="post">
                            <button class="btn btn-danger">구독 취소</button>
                        </form>
                    </td>
                </tr>
            {{/subscribeList}}
